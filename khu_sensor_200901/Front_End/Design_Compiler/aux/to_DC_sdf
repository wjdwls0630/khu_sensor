#!/bin/csh -f
# $Id$
# Translator SDF generated by SADAS to SDF for Design Compiler due to Synopsys tool limitation.
# Synopsys tool limitation: Design Compiler can't read SDF including bracket on related_pin location.
# 1999. 11. 12
# Author: Hae-jin Song
# Version : v1.0

#        (WIDTH (posedge D[11]) (50.699:72.581:94.954))


if ( $#argv != 1 ) goto usage
setenv target $1

set OS=`uname`
if ( $OS == "HP-UX" ) then
	cat <<! >! to_synopsys_sdf.awk
      {
                for(i=1; i<=NF; i++) {
                        if ( match(\$i,"edge")) {
                                i++;
                                gsub(/\[/,"\\\[",\$i)
                                gsub(/\]/,"\\\]",\$i)
                                break;
                        }
                }
                print \$0
	}
!
awk -f to_synopsys_sdf.awk $target >! $target.syn
\rm to_synopsys_sdf.awk
else if ( $OS == "SunOS" ) then
	nawk -f - $target >!  $target.syn  << End
   	{
		for(i=1; i<=NF; i++) {
			if ( match(\$i,"edge")) {
				 i++;
      				gsub(/\[/,"\\\[",\$i)
      				gsub(/\]/,"\\\]",\$i)
                                break;
			}
		}
      		print \$0
   	}
End
endif

echo "Completed successfully\!"
echo "Generated file: $target.syn"
 
exit
 
usage:
 
   echo "Usage: to_DC_sdf [target_sdf]"
