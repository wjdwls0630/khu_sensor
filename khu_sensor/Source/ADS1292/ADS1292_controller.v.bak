module MPR121_controller (	//	Host Side
						clk,
						rstn,
						wen,
						ren,
						mpr121_reg_addr,
						mpr121_data_in,
						mpr121_data_out,
						mpr121_busy,
						mpr121_fail,
						i2c_wb_ack,
						error_code,
						test_dout,
						//	I2C Side
						i2c_scl,
						i2c_sda	
						);
//	Host Side
input		clk;
input		rstn;
input		wen;							// write enable
input 	ren;							// read enable
input [7:0] mpr121_reg_addr;		// MPR121 register address
input	[7:0] mpr121_data_in;		// data to write into MPR121 register
output [7:0] mpr121_data_out;		// read data from MPR121
output mpr121_busy;
output mpr121_fail;
output i2c_wb_ack;
output [7:0] error_code;

output [7:0] test_dout;
//	I2C Side
inout wire	i2c_scl;
inout	wire	i2c_sda;


endmodule